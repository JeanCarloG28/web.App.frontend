@page
@model ErrorModel
@{
    ViewData["Title"] = "iniciar sesion";
}
<link rel="stylesheet" href="~/css/login.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="funcion" href="~/js/site.js" />
<div class="text-center">
    <h1 class="display-4">Welcome E-migrant</h1>

<div class="form-structor">
	<div class="signup">
		<h2 class="form-title" id="signup"><span>or</span>Iniciar sesion</h2>
		<div class="form-holder">
            <input type="email" class="input" placeholder="Email" />
			<input type="password" class="input" placeholder="Password" />
		</div>
		<button class="submit-btn">Iniciar sesion</button>
	</div>
	<div class="login slide-up">

        
		<div class="center">
			<h2 class="form-title" id="login"><span>or</span>registrarse</h2>
			<div class="form-holder">
            <input type="text" class="input" placeholder="nombre" />
			<input type="apellidos" class="input" placeholder="Apellidos" />
            <input type="tipo de documento" class="input" placeholder="tipo de documento de identidad" />
			<input type="N_identificacion" class="input" placeholder="numero de identificacion de identidad" />
            <input type="pais de origen" class="input" placeholder="pais de origen" />
            <input type="fecha de nacimiento" class="input" placeholder="fecha de nacimiento" />
            <input type="telefono" class="input" placeholder="telefono" />
            <input type="email" class="input" placeholder="email" />
            <input type="direccion" class="input" placeholder="direccion" />
            <input type="ciudad" class="input" placeholder="Ciudad" />
            <input type="situacion laboral" class="input" placeholder="situacion laboral" />
            <input type="user" class="input" placeholder="nombre de usuario" />
            <input type="Contraseña" class="input" placeholder="Contraseña" />
			</div>
			<button class="submit-btn">Registrarse</button>

		</div>
	</div>

</div>


<footer class="border-top footer text-muted">
